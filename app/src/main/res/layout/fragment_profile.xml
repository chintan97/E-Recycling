<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/_10sdp"
    tools:context=".Fragment.ProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_profile_user"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_photo_camera"/>

                <Button
                    android:id="@+id/add_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Picture"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Name"
                    android:textSize="16sp"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/edit_box_corner"
                    android:inputType="textPersonName"
                    android:text="Chintan Patel"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Email Address"
                    android:textSize="16sp"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/edit_profile_email"
                    android:text="chintan.patel@dal.ca"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/droid_serif"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Phone Number"
                    android:textSize="16sp"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/edit_profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="902-403-7230"
                    android:maxLength="12"
                    android:background="@drawable/edit_box_corner"
                    android:inputType="phone"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:textColor="@android:color/white"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:fontFamily="@font/droid_serif"
                    android:textStyle="bold"
                    android:background="@drawable/button_selector"
                    android:textSize="18sp"
                    android:layout_marginBottom="@dimen/_10sdp"/>

            </LinearLayout>
        </ScrollView>
</RelativeLayout>